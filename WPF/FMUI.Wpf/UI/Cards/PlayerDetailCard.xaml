<UserControl x:Class="FMUI.Wpf.UI.Cards.PlayerDetailCard"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d"
             d:DesignWidth="420"
             d:DesignHeight="320"
             Background="Transparent">
    <Border Background="Transparent">
        <Grid Margin="4">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>

            <StackPanel Orientation="Horizontal" Grid.Row="0" Margin="0,0,0,8">
                <TextBlock x:Name="NameText"
                           FontSize="20"
                           FontWeight="Bold"
                           Foreground="{DynamicResource PrimaryTextBrush}"
                           Text="Player Name" />
                <Border Background="{DynamicResource AccentPrimaryBrush}"
                        CornerRadius="12"
                        Padding="10,4"
                        Margin="12,2,0,0"
                        VerticalAlignment="Center">
                    <TextBlock x:Name="OverallValueText"
                               FontSize="16"
                               FontWeight="SemiBold"
                               Foreground="White"
                               Text="82" />
                </Border>
            </StackPanel>

            <StackPanel Orientation="Horizontal"
                        Grid.Row="1"
                        Margin="0,0,0,12"
                        Spacing="18">
                <StackPanel Orientation="Horizontal" Spacing="6">
                    <TextBlock FontSize="13"
                               Foreground="{DynamicResource NeutralTextBrush}"
                               Text="Position:" />
                    <TextBlock x:Name="PositionText"
                               FontSize="13"
                               Foreground="{DynamicResource PrimaryTextBrush}"
                               Text="ST" />
                </StackPanel>
                <StackPanel Orientation="Horizontal" Spacing="6">
                    <TextBlock FontSize="13"
                               Foreground="{DynamicResource NeutralTextBrush}"
                               Text="Age:" />
                    <TextBlock x:Name="AgeText"
                               FontSize="13"
                               Foreground="{DynamicResource PrimaryTextBrush}"
                               Text="24" />
                </StackPanel>
                <StackPanel Orientation="Horizontal" Spacing="6">
                    <TextBlock FontSize="13"
                               Foreground="{DynamicResource NeutralTextBrush}"
                               Text="Foot:" />
                    <TextBlock x:Name="FootText"
                               FontSize="13"
                               Foreground="{DynamicResource PrimaryTextBrush}"
                               Text="Right" />
                </StackPanel>
            </StackPanel>

            <Grid Grid.Row="2">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="2*" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>

                <Border Grid.Column="0"
                        Background="{DynamicResource OverlayListItemBrush}"
                        BorderBrush="{DynamicResource OverlayListItemBorderBrush}"
                        BorderThickness="1"
                        CornerRadius="16"
                        Padding="12"
                        Margin="0,0,12,0">
                    <Canvas x:Name="AttributeCanvas" MinHeight="220">
                        <Polygon x:Name="RadarPolygon"
                                 StrokeThickness="2"
                                 Fill="#402EC4B6"
                                 Stroke="#FF2EC4B6" />
                        <Polyline x:Name="RadarOutline"
                                  StrokeThickness="1"
                                  Stroke="#802EC4B6"
                                  Points="0,0" />
                        <TextBlock x:Name="AttributeLabel0"
                                   FontSize="11"
                                   Foreground="{DynamicResource NeutralTextBrush}" />
                        <TextBlock x:Name="AttributeLabel1"
                                   FontSize="11"
                                   Foreground="{DynamicResource NeutralTextBrush}" />
                        <TextBlock x:Name="AttributeLabel2"
                                   FontSize="11"
                                   Foreground="{DynamicResource NeutralTextBrush}" />
                        <TextBlock x:Name="AttributeLabel3"
                                   FontSize="11"
                                   Foreground="{DynamicResource NeutralTextBrush}" />
                        <TextBlock x:Name="AttributeLabel4"
                                   FontSize="11"
                                   Foreground="{DynamicResource NeutralTextBrush}" />
                        <TextBlock x:Name="AttributeLabel5"
                                   FontSize="11"
                                   Foreground="{DynamicResource NeutralTextBrush}" />
                    </Canvas>
                </Border>

                <StackPanel Grid.Column="1" Spacing="12">
                    <StackPanel>
                        <Grid Margin="0,0,0,4">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="Auto" />
                            </Grid.ColumnDefinitions>
                            <TextBlock Text="Fitness"
                                       FontSize="13"
                                       Foreground="{DynamicResource NeutralTextBrush}" />
                            <TextBlock x:Name="FitnessValueText"
                                       FontSize="13"
                                       Foreground="{DynamicResource PrimaryTextBrush}"
                                       Grid.Column="1" />
                        </Grid>
                        <ProgressBar x:Name="FitnessBar"
                                     Height="10"
                                     Minimum="0"
                                     Maximum="100"
                                     Background="{DynamicResource OverlayListItemBrush}"
                                     Foreground="{DynamicResource AccentPrimaryBrush}" />
                    </StackPanel>

                    <StackPanel>
                        <Grid Margin="0,0,0,4">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="Auto" />
                            </Grid.ColumnDefinitions>
                            <TextBlock Text="Morale"
                                       FontSize="13"
                                       Foreground="{DynamicResource NeutralTextBrush}" />
                            <TextBlock x:Name="MoraleValueText"
                                       FontSize="13"
                                       Foreground="{DynamicResource PrimaryTextBrush}"
                                       Grid.Column="1" />
                        </Grid>
                        <ProgressBar x:Name="MoraleBar"
                                     Height="10"
                                     Minimum="0"
                                     Maximum="100"
                                     Background="{DynamicResource OverlayListItemBrush}"
                                     Foreground="{DynamicResource AccentSecondaryBrush}" />
                    </StackPanel>

                    <Border Background="{DynamicResource OverlayListItemBrush}"
                            BorderBrush="{DynamicResource OverlayListItemBorderBrush}"
                            BorderThickness="1"
                            CornerRadius="12"
                            Padding="12">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="*" />
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                            </Grid.RowDefinitions>

                            <StackPanel Grid.Row="0" Grid.Column="0">
                                <TextBlock Text="Appearances"
                                           FontSize="12"
                                           Foreground="{DynamicResource NeutralTextBrush}" />
                                <TextBlock x:Name="AppearancesValueText"
                                           FontSize="16"
                                           FontWeight="SemiBold"
                                           Foreground="{DynamicResource PrimaryTextBrush}" />
                            </StackPanel>

                            <StackPanel Grid.Row="0" Grid.Column="1">
                                <TextBlock Text="Goals"
                                           FontSize="12"
                                           Foreground="{DynamicResource NeutralTextBrush}" />
                                <TextBlock x:Name="GoalsValueText"
                                           FontSize="16"
                                           FontWeight="SemiBold"
                                           Foreground="{DynamicResource PrimaryTextBrush}" />
                            </StackPanel>

                            <StackPanel Grid.Row="1" Grid.Column="0" Margin="0,12,0,0">
                                <TextBlock Text="Assists"
                                           FontSize="12"
                                           Foreground="{DynamicResource NeutralTextBrush}" />
                                <TextBlock x:Name="AssistsValueText"
                                           FontSize="16"
                                           FontWeight="SemiBold"
                                           Foreground="{DynamicResource PrimaryTextBrush}" />
                            </StackPanel>

                            <StackPanel Grid.Row="1" Grid.Column="1" Margin="0,12,0,0">
                                <TextBlock Text="Avg Rating"
                                           FontSize="12"
                                           Foreground="{DynamicResource NeutralTextBrush}" />
                                <TextBlock x:Name="AverageRatingValueText"
                                           FontSize="16"
                                           FontWeight="SemiBold"
                                           Foreground="{DynamicResource PrimaryTextBrush}" />
                            </StackPanel>
                        </Grid>
                    </Border>
                </StackPanel>
            </Grid>
        </Grid>
    </Border>
</UserControl>
