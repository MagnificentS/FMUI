<UserControl x:Class="FMUI.Wpf.UI.Cards.FinanceOverviewCard"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d"
             d:DesignWidth="600"
             d:DesignHeight="320"
             Background="Transparent">
    <Grid Margin="0">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <StackPanel Grid.Row="0" Grid.ColumnSpan="2" Orientation="Horizontal" Spacing="24">
            <StackPanel>
                <TextBlock Text="Revenue"
                           FontSize="14"
                           Foreground="{StaticResource NeutralTextBrush}"/>
                <TextBlock x:Name="RevenueValue"
                           FontSize="22"
                           FontWeight="SemiBold"
                           Foreground="{StaticResource AccentPrimaryBrush}"/>
            </StackPanel>
            <StackPanel>
                <TextBlock Text="Expenditure"
                           FontSize="14"
                           Foreground="{StaticResource NeutralTextBrush}"/>
                <TextBlock x:Name="ExpenditureValue"
                           FontSize="22"
                           FontWeight="SemiBold"
                           Foreground="{StaticResource AccentWarningBrush}"/>
            </StackPanel>
            <StackPanel>
                <TextBlock Text="Transfer Budget"
                           FontSize="14"
                           Foreground="{StaticResource NeutralTextBrush}"/>
                <TextBlock x:Name="TransferBudgetValue"
                           FontSize="22"
                           FontWeight="SemiBold"
                           Foreground="{StaticResource PrimaryTextBrush}"/>
            </StackPanel>
            <StackPanel>
                <TextBlock Text="Wage Budget"
                           FontSize="14"
                           Foreground="{StaticResource NeutralTextBrush}"/>
                <TextBlock x:Name="WageBudgetValue"
                           FontSize="22"
                           FontWeight="SemiBold"
                           Foreground="{StaticResource PrimaryTextBrush}"/>
            </StackPanel>
        </StackPanel>
        <StackPanel Grid.Row="1" Grid.Column="0" Orientation="Vertical" Spacing="4">
            <TextBlock Text="Income Streams"
                       FontSize="16"
                       Foreground="{StaticResource PrimaryTextBrush}"/>
            <StackPanel x:Name="IncomeHost" Orientation="Vertical" Spacing="4"/>
        </StackPanel>
        <StackPanel Grid.Row="1" Grid.Column="1" Orientation="Vertical" Spacing="4">
            <TextBlock Text="Expenditure Breakdown"
                       FontSize="16"
                       Foreground="{StaticResource PrimaryTextBrush}"/>
            <StackPanel x:Name="ExpenditureHost" Orientation="Vertical" Spacing="4"/>
        </StackPanel>
    </Grid>
</UserControl>
