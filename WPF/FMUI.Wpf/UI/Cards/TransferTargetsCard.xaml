<UserControl x:Class="FMUI.Wpf.UI.Cards.TransferTargetsCard"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d"
             d:DesignWidth="520"
             d:DesignHeight="360"
             Background="Transparent">
    <Border Background="Transparent">
        <Grid Margin="4">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>

            <StackPanel Orientation="Horizontal"
                        Grid.Row="0"
                        Spacing="24">
                <StackPanel>
                    <TextBlock Text="Transfer Budget"
                               FontSize="13"
                               Foreground="{DynamicResource NeutralTextBrush}" />
                    <TextBlock x:Name="TransferBudgetValue"
                               FontSize="20"
                               FontWeight="SemiBold"
                               Foreground="{DynamicResource PrimaryTextBrush}"
                               Text="£0" />
                </StackPanel>
                <StackPanel>
                    <TextBlock Text="Wage Budget"
                               FontSize="13"
                               Foreground="{DynamicResource NeutralTextBrush}" />
                    <TextBlock x:Name="WageBudgetValue"
                               FontSize="20"
                               FontWeight="SemiBold"
                               Foreground="{DynamicResource PrimaryTextBrush}"
                               Text="£0" />
                </StackPanel>
            </StackPanel>

            <Grid Grid.Row="1"
                  Margin="0,16,0,8">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="2*" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>

                <TextBlock Grid.Column="0"
                           Text="Target"
                           FontSize="12"
                           Foreground="{DynamicResource NeutralTextBrush}" />
                <TextBlock Grid.Column="1"
                           Text="Asking Price"
                           FontSize="12"
                           Foreground="{DynamicResource NeutralTextBrush}" />
                <TextBlock Grid.Column="2"
                           Text="Wage Demand"
                           FontSize="12"
                           Foreground="{DynamicResource NeutralTextBrush}" />
                <TextBlock Grid.Column="3"
                           Text="Scout"
                           FontSize="12"
                           Foreground="{DynamicResource NeutralTextBrush}" />
                <TextBlock Grid.Column="4"
                           Text="Interest"
                           FontSize="12"
                           Foreground="{DynamicResource NeutralTextBrush}" />
                <TextBlock Grid.Column="5"
                           Text="Status"
                           FontSize="12"
                           Foreground="{DynamicResource NeutralTextBrush}" />
            </Grid>

            <Border Grid.Row="2"
                    Background="{DynamicResource OverlayListItemBrush}"
                    BorderBrush="{DynamicResource OverlayListItemBorderBrush}"
                    BorderThickness="1"
                    CornerRadius="14">
                <ScrollViewer VerticalScrollBarVisibility="Auto"
                              Padding="12">
                    <StackPanel x:Name="TargetRowsHost"
                                Spacing="8" />
                </ScrollViewer>
            </Border>
        </Grid>
    </Border>
</UserControl>
