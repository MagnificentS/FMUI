<UserControl x:Class="FMUI.Wpf.UI.Cards.LeagueTableCard"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d"
             d:DesignWidth="420"
             d:DesignHeight="320"
             Background="Transparent">
    <StackPanel Orientation="Vertical" Spacing="4">
        <TextBlock Text="League Table"
                   FontSize="18"
                   Foreground="{StaticResource PrimaryTextBrush}"/>
        <StackPanel Orientation="Horizontal" Spacing="8" Margin="4,0,4,0">
            <TextBlock Text="#" Width="30" Foreground="{StaticResource NeutralTextBrush}"/>
            <TextBlock Text="Club" Width="180" Foreground="{StaticResource NeutralTextBrush}"/>
            <TextBlock Text="P" Width="30" Foreground="{StaticResource NeutralTextBrush}"/>
            <TextBlock Text="Pts" Width="40" Foreground="{StaticResource NeutralTextBrush}"/>
        </StackPanel>
        <StackPanel x:Name="TableHost"
                    Orientation="Vertical"
                    Spacing="2"/>
    </StackPanel>
</UserControl>
